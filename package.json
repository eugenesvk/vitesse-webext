{
  "name": "vitesse-webext",
  "displayName": "Vitesse WebExt",
  "version": "0.0.1",
  "description": "[description]",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:'*'",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "dev:bg": "tsup --watch ./src",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js build:bg",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "build:bg": "tsup",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension",
    "lint": "eslint '{src,scripts}/**/*.{json,ts,js,tsx}'",
    "test": "vitest test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.67",
    "@solid-primitives/rootless": "^1.1.0",
    "@solid-primitives/storage": "^1.3.1",
    "@types/download": "^8.0.1",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.0.0",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.10",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.18.0",
    "esno": "^0.16.3",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.0",
    "kolorist": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "solid-testing-library": "^0.3.0",
    "tsup": "^6.1.2",
    "typescript": "4.7.4",
    "unplugin-auto-import": "^0.9.1",
    "unplugin-icons": "^0.14.5",
    "vite": "^2.9.12",
    "vite-plugin-solid": "^2.2.6",
    "vite-plugin-windicss": "^1.8.5",
    "vitest": "^0.16.0",
    "web-ext": "^7.1.0",
    "webext-bridge": "^5.0.4",
    "webextension-polyfill": "^0.9.0",
    "windicss": "^3.5.5"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "solid-js": "^1.4.4"
  }
}
